{
  "name": "icinga/workflow-test",
  "description": "Test repository for GitHub Actions caching performance",
  "type": "library",
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0 || ^10.0 || ^11.0"
  },
  "autoload": {
    "psr-4": {
      "Icinga\\Test\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Icinga\\Test\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "parallel-lint --exclude vendor .",
    "cs": "phpcs -wps --colors"
  }
}